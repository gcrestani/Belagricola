@model BelagricolaMVC.Models.Contato

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Contato</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            @Html.Hidden("ClienteId")

            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Relacionamento" class="control-label"></label>
                <input asp-for="Relacionamento" class="form-control" />
                <span asp-validation-for="Relacionamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
