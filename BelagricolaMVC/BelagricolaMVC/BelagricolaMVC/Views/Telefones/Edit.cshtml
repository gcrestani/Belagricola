@model BelagricolaMVC.Models.Telefone

@{
    ViewData["Title"] = "Edit";
}

<h2>Editar Telefone</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tel" class="control-label"></label>
                <input asp-for="Tel" class="form-control" />
                <span asp-validation-for="Tel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a href="/Contatos" class="btn">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
            <a href="/Telefones/Delete/@Model.Id"  class="btn btn-danger">Deletar</a>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
